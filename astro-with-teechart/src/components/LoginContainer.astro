---
import { login }from '../javascript/login.js';
---
<body class="bg-gray-800 p-10">
    <div class="container mx-auto w-3/4 p-10 rounded-lg">
        <div class="flex justify-center">
            <div class="w-1/2 bg-white text-gray-800 rounded-lg p-10 mt-5 flex flex-col">
                <p class="text-4xl mt-3 font-bold text-center">Welcome back</p>
                <div class="flex items-center mt-3">
                    <label class="w-1/6 p-1 font-bold">Email</label>
                    <input type="email" class="w-5/6 bg-gray-200 text-gray-800 rounded-md" id="inputEmail" placeholder="name@example.com">
                </div>
                <div class="flex items-center mt-3">
                    <label class="w-1/6 p-1 font-bold">Password</label>
                    <input type="password" id="inputPassword" placeholder="Password" class="w-5/6 bg-gray-200 text-gray-800 rounded-md" aria-describedby="passwordHelpBlock">
                </div>
                <button onclick="login()" type="button" class="text-black font-bold hover:bg-blue-400 bg-blue-500 w-2/5 self-center py-2 mt-3 rounded-md">Login</button>
                <div id="error" class="text-red-500"></div>
            </div>
        </div>
    </div>
</body>